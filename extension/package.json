{
  "name": "devmeter",
  "displayName": "DevMeter",
  "description": "Open-source automated coding time tracker. Master your craft with real-time insights.",
  "version": "0.1.4",
  "license": "MIT",
  "publisher": "DevMitrza",
  "repository": {
    "type": "git",
    "url": "https://github.com/Zaid-maker/DevMeter"
  },
  "engines": {
    "vscode": "^1.108.1"
  },
  "categories": [
    "Visualization",
    "Other"
  ],
  "icon": "resources/icon.png",
  "keywords": [
    "wakatime",
    "time-tracker",
    "devmeter",
    "coding-stats"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "devmeter.apiKey",
        "title": "DevMeter: Enter API Key"
      },
      {
        "command": "devmeter.dashboard",
        "title": "DevMeter: Open Dashboard"
      },
      {
        "command": "devmeter.profile",
        "title": "DevMeter: Open Profile"
      },
      {
        "command": "devmeter.showMenu",
        "title": "DevMeter: Show Menu"
      }
    ],
    "configuration": {
      "title": "DevMeter",
      "properties": {
        "devmeter.apiKey": {
          "type": "string",
          "default": "",
          "description": "Your DevMeter API Key"
        },
        "devmeter.apiUrl": {
          "type": "string",
          "default": "https://devmeter-v2.zaidcode.me/api",
          "description": "DevMeter API URL"
        },
        "devmeter.showProject": {
          "type": "boolean",
          "default": false,
          "description": "Show current project name in status bar"
        },
        "devmeter.showStreak": {
          "type": "boolean",
          "default": true,
          "description": "Show current streak in status bar"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "bun run build",
    "build": "esbuild ./src/extension.ts --bundle --outfile=out/extension.js --external:vscode --format=cjs --platform=node",
    "watch": "esbuild ./src/extension.ts --bundle --outfile=out/extension.js --external:vscode --format=cjs --platform=node --watch",
    "compile": "tsc -p ./",
    "lint": "eslint src --ext ts"
  },
  "devDependencies": {
    "@types/vscode": "^1.108.1",
    "@vscode/vsce": "^3.7.1",
    "esbuild": "^0.27.2",
    "typescript": "^5.0.0"
  },
  "dependencies": {
    "axios": "^1.7.9"
  }
}