{
  "name": "devmeter",
  "displayName": "DevMeter",
  "description": "Open-source automated coding time tracker. Master your craft with real-time insights.",
  "version": "0.4.0",
  "license": "MIT",
  "publisher": "DevMitrza",
  "repository": {
    "type": "git",
    "url": "https://github.com/Zaid-maker/DevMeter"
  },
  "engines": {
    "vscode": "^1.74.0"
  },
  "categories": [
    "Visualization",
    "Other"
  ],
  "icon": "resources/icon.png",
  "keywords": [
    "wakatime",
    "time-tracker",
    "devmeter",
    "coding-stats"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "devmeter.apiKey",
        "title": "DevMeter: Enter API Key"
      },
      {
        "command": "devmeter.dashboard",
        "title": "DevMeter: Open Dashboard"
      },
      {
        "command": "devmeter.profile",
        "title": "DevMeter: Open Profile"
      },
      {
        "command": "devmeter.showMenu",
        "title": "DevMeter: Show Menu"
      },
      {
        "command": "devmeter.syncNow",
        "title": "DevMeter: Sync Now"
      },
      {
        "command": "devmeter.checkStatus",
        "title": "DevMeter: Check API Status"
      }
    ],
    "configuration": {
      "title": "DevMeter",
      "properties": {
        "devmeter.apiKey": {
          "type": "string",
          "default": "",
          "description": "Your DevMeter API Key"
        },
        "devmeter.apiUrl": {
          "type": "string",
          "default": "https://devmeter.codepro.it/api",
          "description": "DevMeter API URL"
        },
        "devmeter.showProject": {
          "type": "boolean",
          "default": false,
          "description": "Show current project name in status bar"
        },
        "devmeter.showStreak": {
          "type": "boolean",
          "default": true,
          "description": "Show current streak in status bar"
        },
        "devmeter.deviceName": {
          "type": "string",
          "default": "",
          "description": "Custom name for this device (e.g. 'Work Laptop', 'Home PC'). If empty, uses hostname."
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "bun run build",
    "build": "esbuild ./src/extension.ts --bundle --outfile=out/extension.js --external:vscode --format=cjs --platform=node",
    "watch": "esbuild ./src/extension.ts --bundle --outfile=out/extension.js --external:vscode --format=cjs --platform=node --watch",
    "compile": "tsc -p ./",
    "lint": "eslint src --ext ts"
  },
  "devDependencies": {
    "@types/node": "^25.1.0",
    "@types/vscode": "^1.74.0",
    "@vscode/vsce": "^3.7.1",
    "esbuild": "^0.27.2",
    "typescript": "^5.0.0"
  },
  "dependencies": {
    "axios": "^1.7.9"
  }
}
