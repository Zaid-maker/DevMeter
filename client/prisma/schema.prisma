generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

model User {
  id            String            @id @default(cuid())
  email         String            @unique
  name          String?
  emailVerified Boolean           @default(false)
  image         String?
  createdAt     DateTime          @default(now())
  updatedAt     DateTime          @updatedAt
  timezone      String?           @default("UTC")
  accounts      Account[]
  apiKeys       ApiKey[]
  heartbeats    Heartbeat[]
  sessions      Session[]
  xp            Int               @default(0)
  level         Int               @default(1)
  achievements  UserAchievement[]
  deletedAt     DateTime?

  @@index([deletedAt])
}

model Achievement {
  id          String            @id @default(cuid())
  slug        String            @unique
  name        String
  description String
  xpReward    Int               @default(0)
  icon        String?
  createdAt   DateTime          @default(now())
  users       UserAchievement[]
}

model UserAchievement {
  id            String      @id @default(cuid())
  userId        String
  achievementId String
  unlockedAt    DateTime    @default(now())
  user          User        @relation(fields: [userId], references: [id], onDelete: Cascade)
  achievement   Achievement @relation(fields: [achievementId], references: [id], onDelete: Cascade)

  @@unique([userId, achievementId])
}

model Session {
  id        String   @id @default(cuid())
  userId    String
  expiresAt DateTime
  token     String   @unique
  createdAt DateTime
  updatedAt DateTime
  ipAddress String?
  userAgent String?
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model Account {
  id                    String    @id @default(cuid())
  userId                String
  accountId             String
  providerId            String
  accessToken           String?
  refreshToken          String?
  idToken               String?
  accessTokenExpiresAt  DateTime?
  refreshTokenExpiresAt DateTime?
  scope                 String?
  password              String?
  createdAt             DateTime
  updatedAt             DateTime
  user                  User      @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([providerId, accountId])
}

model Verification {
  id         String    @id @default(cuid())
  identifier String
  value      String
  expiresAt  DateTime
  createdAt  DateTime?
  updatedAt  DateTime?
}

model ApiKey {
  id        String   @id @default(cuid())
  key       String   @unique @default(uuid())
  name      String?
  userId    String
  createdAt DateTime @default(now())
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model Heartbeat {
  id        String   @id @default(cuid())
  userId    String
  project   String
  language  String
  file      String
  type      String
  isSave    Boolean  @default(false)
  editor    String?
  platform  String?
  timestamp DateTime
  createdAt DateTime @default(now())
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([project])
  @@index([timestamp])
  @@index([editor])
  @@index([platform])
}
